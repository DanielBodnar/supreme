{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/exec",
      {
        "verifyConditionsCmd": "semantic-release-cargo verify-conditions",
        "prepareCmd": "semantic-release-cargo prepare ${nextRelease.version}"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["Cargo.toml", "Cargo.lock", "CHANGELOG.md"]
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "artifacts/x86_64-apple-darwin/supreme-x86_64-apple-darwin",
            "label": "supreme-${nextRelease.version}-x86_64-apple-darwin"
          },
          {
            "path": "artifacts/aarch64-apple-darwin/supreme-aarch64-apple-darwin",
            "label": "supreme-${nextRelease.version}-aarch64-apple-darwin"
          },
          {
            "path": "dist/SHA256SUMS.txt",
            "label": "SHA256SUMS.txt"
          }
        ]
      }
    ]
  ]
}
